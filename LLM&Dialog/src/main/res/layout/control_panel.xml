<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ImageView
		android:id="@+id/joystick_mov"
		android:layout_width="@dimen/joystick_background_width"
		android:layout_height="@dimen/joystick_background_height"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="@dimen/joystick_background_marginLeft"
		android:layout_marginBottom="@dimen/joystick_background_marginBottom"
		android:src="@drawable/joystick_background" />

	<ImageView
		android:id="@+id/joystick_dir"
		android:layout_width="@dimen/joystick_background_width"
		android:layout_height="@dimen/joystick_background_height"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/joystick_background_marginRight"
		android:layout_marginBottom="@dimen/joystick_background_marginBottom"
		android:src="@drawable/joystick_background" />

	<Button
		android:id="@+id/button1"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignLeft="@+id/joystick_mov"
		android:layout_alignTop="@+id/joystick_mov"
		android:layout_marginLeft="@dimen/joystick_button_margin"
		android:layout_marginTop="@dimen/joystick_button_margin"
		android:background="@drawable/joystick_button"
		android:clickable="false"
		android:focusable="false" />


	<Button
		android:id="@+id/button2"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignLeft="@+id/joystick_dir"
		android:layout_alignTop="@+id/joystick_dir"
		android:layout_marginLeft="@dimen/joystick_button_margin"
		android:layout_marginTop="@dimen/joystick_button_margin"
		android:background="@drawable/joystick_button"
		android:clickable="false"
		android:focusable="false" />

	<ImageButton
		android:id="@+id/button3"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="30px"
		android:layout_marginTop="30px"
		android:src="@android:drawable/stat_notify_chat" />

	<ImageButton
		android:id="@+id/button4"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="120px"
		android:layout_marginTop="30px"
		android:src="@android:drawable/presence_video_busy" />

	<ImageButton
		android:id="@+id/button5"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="210px"
		android:layout_marginTop="30px"
		android:src="@android:drawable/arrow_up_float" />

	<ImageButton
		android:id="@+id/button6"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignParentLeft="true"
		android:layout_marginLeft="300px"
		android:layout_marginTop="30px"
		android:src="@android:drawable/arrow_down_float" />

	<ImageButton
		android:id="@+id/button7"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="570px"
		android:layout_marginTop="30px"
		android:src="@android:drawable/ic_menu_compass" />

	<ImageButton
		android:id="@+id/button11"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="660px"
		android:layout_marginTop="30px"
		android:visibility="gone"
		android:src="@android:drawable/ic_menu_compass" />

	<ImageButton
		android:id="@+id/button12"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="750px"
		android:layout_marginTop="30px"
		android:visibility="gone"
		android:src="@android:drawable/ic_menu_compass" />

	<ImageButton
		android:id="@+id/button8"
		android:layout_width="@dimen/joystick_background_width"
		android:layout_height="@dimen/joystick_background_height"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginRight="67dp"
		android:layout_marginBottom="47dp"
		android:background="#00000000"
		android:src="@drawable/jump" />

	<ImageButton
		android:id="@+id/button9"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="390px"
		android:layout_marginTop="30px"
		android:src="@android:drawable/ic_dialog_map" />

	<ImageButton
		android:id="@+id/button10"
		android:layout_width="@dimen/joystick_button_width"
		android:layout_height="@dimen/joystick_button_height"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="480px"
		android:layout_marginTop="30px"
		android:src="@android:drawable/ic_menu_rotate" />

	<Spinner
		android:id="@+id/spinner"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="660px"
		android:layout_marginTop="40px"
		android:entries="@array/positions"
		android:visibility="gone" />

	<Spinner
		android:id="@+id/spinner2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="750px"
		android:layout_marginTop="40px"
		android:entries="@array/positions2"
		android:visibility="gone" />

	<Spinner
		android:id="@+id/spinner3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="840px"
		android:layout_marginTop="40px"
		android:entries="@array/positions3"
		android:visibility="gone" />

	<TextView
		android:id="@+id/fps_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="30px"
		android:layout_marginTop="100px"
		android:lineSpacingExtra="5dp"
		android:singleLine="true"
		android:textColor="#ffff0000"
		android:textSize="11sp" />

	<TextView
		android:id="@+id/drawcall_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="30px"
		android:layout_marginTop="130px"
		android:lineSpacingExtra="5dp"
		android:singleLine="true"
		android:textColor="#ffff0000"
		android:textSize="11sp" />

	<TextView
		android:id="@+id/triangle_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="30px"
		android:layout_marginTop="160px"
		android:lineSpacingExtra="5dp"
		android:singleLine="true"
		android:textColor="#ffff0000"
		android:textSize="11sp" />

	<TextView
		android:id="@+id/camera_position"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="30px"
		android:layout_marginTop="190px"
		android:lineSpacingExtra="5dp"
		android:singleLine="true"
		android:textColor="#ffff0000"
		android:textSize="11sp" />

	<TextView
		android:id="@+id/res_mem_usage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="30px"
		android:layout_marginTop="210px"
		android:lineSpacingExtra="5dp"
		android:singleLine="false"
		android:textColor="#ffffff00"
		android:textSize="8sp" />

	<ImageButton
		android:id="@+id/buttonDialog"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_centerInParent="true"
		android:background="@drawable/dialog_button_background"
		android:src="@drawable/ic_dialog_chat"
		android:scaleType="centerInside"
		android:padding="16dp"
		android:elevation="8dp"
		android:contentDescription="对话按钮" />

	<!-- NPC对话面板 -->
	<include
		layout="@layout/dialog_panel"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

</RelativeLayout>
